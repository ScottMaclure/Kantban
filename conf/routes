# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Project pages
GET     /project/{id}/board                     Kantban.board
GET     /project/{id}/process                   Kantban.process
GET     /project/{id}                           Kantban.project

# Ajax calls
GET     /ajax/move/story-{storyId}/to/i-{index}                    Ajax.moveStory
GET     /ajax/move/story-{storyId}/to/state-{stateId}/i-{index}    Ajax.moveStoryToState

GET     /ajax/move/state-{stateId}/to/i-{index}                    Ajax.moveState

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
